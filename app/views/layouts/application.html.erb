<!DOCTYPE html>
<html>
  <head>
    <title>Songcircle</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "flat-ui.css" %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= yield :head %>
  </head>

  <body>
    <div class="application">
      <div class="container-fluid">
        <%= render 'shared/navbar' %>
        <% flash.each do |key, value| %>
          <%= value %>
        <% end %>

        <%= yield %>
        <footer>
          <p>Created By: <%= link_to "Russel Viola", 'https://github.com/RusselViola/songcircle/' %></p>
          <%= debug(params) if Rails.env.development? %>
        </footer>
      </div>
    </div>
  </body>
</html>
