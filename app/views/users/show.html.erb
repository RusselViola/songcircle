<div id="user-show-page" class="row">
  <div id="user_show" class="row offset-2">
    <div class="col-sm-10">
      <% if current_user.profile_image_id? %>
      <%= attachment_image_tag(current_user, :profile_image, :fill, 300, 300) %>
      <% end %>
        <div class="col-sm-8 top-buffer">
          <h1> <%= @user.first_name %>'s Profile </h1>
          <h6>Your info</h6>
          <li><%= @user.first_name %></li>
          <li><%= @user.email %></li>
          <li>Member since: <%= @user.created_at %></li>
      </div>
    </div>
  </div>
  <div class="col-sm-8 top-buffer">
    <h3>Current Submissions:</h3>
    <ul>
      <% @songs.each do |song| %>
        <li> <%= link_to song.title, song_path(song) %> </li>
      <% end %>
    </ul>
  </div>
</div>
