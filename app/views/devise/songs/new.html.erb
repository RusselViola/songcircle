<%= form_for @sound do |f| %>

  <div class="form">
    <%= f.label :name %>
    <%= f.text_field :name%>
  </div>

  <div class="form">
    <%= f.label :audio, "Audio File" %>
    <%= f.attachment_field :audio, direct: true, presigned: true %>
    <progress value="0" max="100"></progress>
    <p id="file-name"></p>
  </div>

  <div class="actions">
    <%= f.submit class: "button" %>
  </div>
<% end %>
